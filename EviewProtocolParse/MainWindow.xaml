<Window x:Class="EviewProtocolParse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EviewProtocolParse"
        mc:Ignorable="d"
        Title="Eview Protocol Parse V1.6" Height="1097.188" Width="1092.188">
    <Grid>
        <DockPanel>
            <Grid Height="50" DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Border BorderThickness="1" BorderBrush="LightBlue" Margin="2" Grid.Column="0" Grid.ColumnSpan="4"></Border>

                <ComboBox Name="cb_Crypto" Grid.Column="0" Margin="2" Height="30" SelectionChanged="Cb_Crypto_SelectionChanged" VerticalAlignment="Center"  >
                    <ComboBoxItem>None</ComboBoxItem>
                    <ComboBoxItem>Static AES</ComboBoxItem>
                </ComboBox>

                <GroupBox  Name="gp_StaticAes" Grid.Column="1" Margin="1" Header ="Static AES" >
                    <StackPanel Orientation="Horizontal" >
                        <Label Margin="1" >key ID:</Label>
                        <TextBox  Name="txt_KeyID" MinWidth="30" Margin="2" ></TextBox>
                        <Label Margin="1" >Aes KEY:</Label>
                        <TextBox MinWidth="100" Margin="2" Name="txt_AesKey"></TextBox>
                        <Label Margin="1"  >Aes IV:</Label>
                        <TextBox MinWidth="100" Margin="2"  Name="txt_AesIV" ></TextBox>
                        <Button MinWidth="50" x:Name="btn_LoadStaticAes" Content="Load" Margin="2" Click="Btn_LoadStaticAes_Click"></Button>
                        <Label Margin="1"  >Control Value:</Label>
                        <TextBox MinWidth="60" Margin="2"  Name="txt_ControlValue" >1</TextBox>
                    </StackPanel>
                </GroupBox>

            </Grid>
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="120"></ColumnDefinition>
                    <ColumnDefinition Width="120"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <TextBox Name="txt_ProtocolData" Margin="5" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"   Height="100"  Grid.Column="0">
                    <!--
                    ab10b500087aae07 
                    -->
                    AB 10 14 00 D1 73 01 00 03 10 01 38 36 31 34 37 35 30 33 30 38 35 32 31 35 38 01 12
                </TextBox>
                <StackPanel Width="100" Margin="5" Grid.Column="1">
                    <Button Margin="2" x:Name="btn_Parse"  FontSize="15" Click="Btn_Parse_Click" Content="Parse"/>
                    <Button Margin="2" x:Name="btn_GetACK"   FontSize="15" Click="Btn_GetACK_Click" Content="ACK"/>
                    <Button Margin="2" x:Name="btn_Encrypt"    FontSize="15" Click="Btn_Encrypt_Click" Content="Encrypt"/>
                    <Button Margin="2" x:Name="btn_Decrypt"    FontSize="15" Click="Btn_Decrypt_Click" Content="Decrypt"/>
                </StackPanel>
                <StackPanel Width="100" Margin="5" Grid.Column="2">
                    <Button Margin="2" x:Name="btn_LoadFile"  FontSize="15" Click="Btn_Parse_Click" Content="Load File"/>

                </StackPanel>
            </Grid>
            <TextBox  Name="txt_Parse" FontFamily="Courier New" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="5"  ></TextBox>
        </DockPanel>

    </Grid>
</Window>
